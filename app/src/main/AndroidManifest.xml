<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="egaakakom.gmail.com.firdauscv">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfilenavActivity"
            android:label="Profile"
            android:parentActivityName=".ProfilenavActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilenavActivity" />
        </activity>
        <activity
            android:name=".EduActivity"
            android:label="Education"
            android:parentActivityName=".EduActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EduActivity" />
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:label="Gallery"
            android:parentActivityName=".GalleryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GalleryActivity" />
        </activity>
        <activity
            android:name=".WorkActivity"
            android:label="Work Experience"
            android:parentActivityName=".WorkActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WorkActivity" />
        </activity>

    </application>

</manifest>